{
    "include": ["./src/**/*", "provider.js", "fetch-external-scripts.js", "jest.config.ts"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "es2017"],
        "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
        },
    }
}